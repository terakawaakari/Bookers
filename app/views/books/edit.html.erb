<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
<div>Title</div>
<%= f.text_field :title %>
<div>Body</div>
<%= f.text_area :body %>
<div class="update-button"><%= f.submit ' Update Book ' %></div>
<%= link_to 'Show', book_path(@book.id) %> |
<%= link_to 'Back', :back %>
<% end %>